{
  "name": "wpnuxt",
  "version": "2.0.0-alpha.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm --filter './packages/**' dev:prepare && pnpm --filter './packages/**' build && pnpm --filter './playgrounds/**' build",
    "dev:prepare": "pnpm --filter './packages/**' dev:prepare && pnpm --filter './playgrounds/**' nuxt:prepare",
    "dev:basic": "pnpm --filter @wpnuxt/playground-basic dev",
    "dev:full": "pnpm --filter @wpnuxt/playground-full dev",
    "dev": "pnpm dev:full",
    "lint": "eslint .",
    "test": "pnpm --filter './packages/**' test",
    "typecheck": "pnpm --filter './**' typecheck",
    "clean": "pnpm -r run clean && rm -rf node_modules",
    "check": "pnpm run lint && pnpm run typecheck && pnpm run test && pnpm run build",
    "check:full": "pnpm clean && pnpm install && pnpm run dev:prepare && pnpm run check",
    "release": "release-it"
  },
  "devDependencies": {
    "@nuxt/eslint-config": "^1.12.1",
    "@release-it/conventional-changelog": "^10.0.0",
    "eslint": "^9.39.2",
    "release-it": "^18.1.2"
  },
  "packageManager": "pnpm@10.26.1+sha512.664074abc367d2c9324fdc18037097ce0a8f126034160f709928e9e9f95d98714347044e5c3164d65bd5da6c59c6be362b107546292a8eecb7999196e5ce58fa",
  "engines": {
    "node": ">=20"
  }
}
