# WPNuxt Configuration
# Copy this file to .env and update with your values

# Required: WordPress GraphQL API URL (no trailing slash)
WPNUXT_WORDPRESS_URL=https://your-wordpress-site.com

# Optional: Frontend URL for Faust.js integration (no trailing slash)
WPNUXT_FRONTEND_URL=https://your-nuxt-site.com

# Optional: Default menu name to fetch
# Default: main
WPNUXT_DEFAULT_MENU_NAME=main

# Optional: Enable/disable caching
# Default: true
WPNUXT_ENABLE_CACHE=true

# Optional: Cache duration in seconds
# Default: 300 (5 minutes)
WPNUXT_CACHE_MAX_AGE=300

# Optional: Enable staging mode (shows staging banner)
# Default: false
WPNUXT_STAGING=false

# Optional: Download GraphQL schema on startup
# When false, expects a committed schema.graphql file
# Default: true
WPNUXT_DOWNLOAD_SCHEMA=true

# Optional: Logging level
# 0 = silent, 1 = error, 2 = warn, 3 = info, 4 = debug, 5 = trace
# Default: 3
WPNUXT_LOG_LEVEL=3

# Optional: Prefix for auto-generated composables
# Default: useWP
WPNUXT_COMPOSABLES_PREFIX=useWP

